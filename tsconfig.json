{
  "compilerOptions": {
    "strict": true,
    "target": "es5",
    "lib": [
      "es5",
      "es6",
      "esnext",
      "dom"
    ],
    "module": "es6",
    "downlevelIteration": true,
    //    "declaration": true,
    //    "declarationDir": "dist",
    "sourceMap": true,
    "typeRoots": [
      "./types",
      "./node_modules/@types"
    ],
    "outDir": "dist"
  },
  "include": [
    "./src/**/*.ts",
    "./types/**/*.ts"
  ]
}
